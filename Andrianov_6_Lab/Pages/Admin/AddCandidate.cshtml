@page "{id}"
@model AddCandidateModel
@{
    ViewData["Title"] = "Add Candidate";
}

<div class="container">
    <h1>Add Candidate to @Model.Session?.Title</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form method="post">
        <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" name="fullName" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="candidateType" class="form-label">Type</label>
            <select class="form-control" id="candidateType" name="candidateType">
                @foreach (var type in Model.CandidateTypes)
                {
                    <option value="@type.Code">@type.Name (@type.Code)</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Candidate</button>
        <a href="/Admin" class="btn btn-secondary">Back to Admin</a>
    </form>

    @if (Model.Session?.Candidates.Any() == true)
    {
        <h3 class="mt-4">Current Candidates</h3>
        <ul class="list-group">
            @foreach (var candidate in Model.Session.Candidates)
            {
                <li class="list-group-item">
                    <form class="row g-2 align-items-center" method="post" asp-page-handler="Update">
                        <input type="hidden" name="id" value="@Model.Session.Id" />
                        <input type="hidden" name="candidateId" value="@candidate.Id" />
                        <div class="col-md-3">
                            <input class="form-control" name="fullName" value="@candidate.FullName" />
                        </div>
                        <div class="col-md-3">
                            <input class="form-control" name="description" value="@candidate.Description" />
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" name="candidateType">
                                @foreach (var type in Model.CandidateTypes)
                                {
                                    <option value="@type.Code" selected="@(type.Code == candidate.Type?.Code)">@type.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success btn-sm">Save</button>
                        </div>
                    </form>
                    <form class="mt-2" method="post" asp-page-handler="Delete" onsubmit="return confirm('Delete this candidate?');">
                        <input type="hidden" name="id" value="@Model.Session.Id" />
                        <input type="hidden" name="candidateId" value="@candidate.Id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                    </form>
                </li>
            }
        </ul>
    }
</div>